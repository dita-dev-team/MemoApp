<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_dark_primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonStyle">@style/ButtonsDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonsDark" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_states_dark</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>

    </style>

    <style name="ButtonsLight" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_states_light</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>

    </style>

    <style name="ButtonsTransparent" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/btn_states_light</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>

    </style>

    <!-- Dividers -->
    <style name="vertical_divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
